#!/usr/bin/env bash
# full-status â€” dump everything queryable without moving
# Usage: full-status <credentials.txt>

SCRIPT_DIR="$(cd "$(dirname "$0")" && pwd)"
SM="$SCRIPT_DIR/sm"

if [ -z "$1" ]; then
  echo "Usage: full-status <credentials.txt>" >&2
  exit 1
fi

$SM login "$1" 2>&1

section() { printf '\n\033[1;36m=== %s ===\033[0m\n' "$1"; }
d() { sleep 0.3; }

section "STATUS";           $SM status 2>&1;                   d
section "SHIP";             $SM ship 2>&1;                     d
section "CARGO";            $SM cargo 2>&1;                    d
section "CURRENT POI";      $SM poi 2>&1;                      d
section "SYSTEM";           $SM system 2>&1;                   d
section "ALL POIS";         $SM pois 2>&1;                     d
section "NEARBY PLAYERS";   $SM nearby 2>&1;                   d
section "SKILLS";           $SM skills 2>&1;                   d
section "WRECKS";           $SM wrecks 2>&1;                   d
section "ACTIVE MISSIONS";  $SM active-missions 2>&1;          d
section "NOTIFICATIONS";    $SM notifications 2>&1;            d
section "OWNED SHIPS";      $SM list-ships 2>&1;               d
section "DRONES";           $SM get-drones 2>&1;               d
section "TRADES";           $SM get-trades 2>&1;               d
section "NOTES";            $SM get-notes 2>&1;                d
section "FACTIONS";         $SM faction-list 2>&1;             d
section "CHAT (local)";     $SM get-chat-history local 2>&1;   d
section "CHAT (system)";    $SM get-chat-history system 2>&1;  d
section "RECIPES";          $SM query-recipes 2>&1;

echo ""
echo "Done."
